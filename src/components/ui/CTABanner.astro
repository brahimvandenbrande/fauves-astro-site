---
import Button from './Button.astro';

interface Props {
  title: string;
  description?: string;
  buttonText?: string;
  buttonHref?: string;
  variant?: 'primary' | 'secondary';
  className?: string;
}

const {
  title,
  description,
  buttonText = 'CONTACTEZ-NOUS',
  buttonHref = '/contact',
  variant = 'primary',
  className = ''
} = Astro.props;

const variants = {
  primary: 'bg-violet-600 text-white',
  secondary: 'bg-gray-100 text-black'
};
---

<section class={`px-4 sm:px-6 lg:px-8 ${className}`}>
  <div class={`mx-auto max-w-[85rem] rounded-2xl px-6 sm:px-10 py-16 sm:py-20 ${variants[variant]}`}>
    <h2 class="text-3xl sm:text-5xl md:text-6xl font-semibold leading-tight">
      {title}
    </h2>
    
    {description && (
      <p class="mt-4 text-xl max-w-3xl">
        {description}
      </p>
    )}
    
    <div class="mt-8">
      <Button 
        href={buttonHref}
        variant={variant === 'primary' ? 'secondary' : 'primary'}
      >
        {buttonText}
      </Button>
    </div>
  </div>
</section>
