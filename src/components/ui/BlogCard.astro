---
interface Props {
  title: string;
  description: string;
  href: string;
  className?: string;
  buttonText?: string;
  imageUrl?: string;
  imageAlt?: string;
}

const {
  title,
  description,
  href,
  className = '',
  buttonText = 'LIRE PLUS',
  imageUrl,
  imageAlt = ''
} = Astro.props;
---

<article class={`group flex flex-col h-full ${className}`}>
  <a href={href} class="block h-full">
    <div class="h-full flex flex-col rounded-xl border border-neutral-200 bg-white shadow-[0_1px_0_0_rgba(0,0,0,0.04)] transition-all duration-200 group-hover:-translate-y-0.5 overflow-hidden">
      {imageUrl && (
        <div class="relative pt-[56.25%] w-full">
          <img
            src={imageUrl}
            alt={imageAlt}
            loading="lazy"
            class="absolute top-0 left-0 w-full h-full object-cover"
            width={600}
            height={337}
          />
        </div>
      )}
      <div class="p-6 flex-1 flex flex-col">
        <h2 class="text-xl font-semibold text-black mb-3 line-clamp-2">
          {title}
        </h2>
        <p class="text-sm leading-6 text-black line-clamp-3 mb-6 flex-grow">
          {description}
        </p>
        <div class="mt-auto">
          <span class="inline-flex items-center rounded-full px-4 py-2 text-xs font-semibold bg-violet-600 text-white tracking-wide">
            {buttonText}
          </span>
        </div>
      </div>
    </div>
  </a>
</article>
