---
interface Props {
  title: string;
  description: string;
  href: string;
  className?: string;
  buttonText?: string;
}

const {
  title,
  description,
  href,
  className = '',
  buttonText = 'LIRE PLUS',
} = Astro.props;
---

<article class={`group h-full ${className}`}>
  <a href={href} class="block h-full">
    <div class="h-full rounded-xl border border-neutral-200 bg-white p-6 shadow-[0_1px_0_0_rgba(0,0,0,0.04)] transition-transform duration-200 group-hover:-translate-y-0.5">
      <h2 class="text-xl font-semibold text-black mb-2">
        {title}
      </h2>
      <p class="text-sm leading-6 text-black line-clamp-4 mb-6">
        {description}
      </p>
      <span class="inline-flex items-center rounded-full px-4 py-2 text-xs font-semibold bg-violet-600 text-white tracking-wide">
        {buttonText}
      </span>
    </div>
  </a>
</article>
