---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline';
  className?: string;
}

const { 
  href, 
  variant = 'primary',
  className = '' 
} = Astro.props;

const baseClasses = 'inline-flex items-center rounded-full font-semibold text-sm px-5 py-2.5 transition-colors';

const variants = {
  primary: 'bg-violet-600 text-white hover:bg-violet-700',
  secondary: 'bg-white text-violet-700 hover:bg-gray-50',
  outline: 'border border-current text-current hover:bg-gray-50'
};

const buttonClasses = `${baseClasses} ${variants[variant]} ${className}`;
---

{!href ? (
  <button class={buttonClasses}>
    <slot />
  </button>
) : (
  <a href={href} class={buttonClasses}>
    <slot />
  </a>
)}
